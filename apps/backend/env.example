# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Google OAuth Configuration (for user authentication only)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Encryption Key (for storing sensitive data)
ENCRYPTION_KEY=your-32-character-encryption-key

# Google Ads API Configuration (MCC-based)
GOOGLE_ADS_CLIENT_ID=your_google_ads_client_id
GOOGLE_ADS_CLIENT_SECRET=your_google_ads_client_secret
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_developer_token
GOOGLE_ADS_MCC_ID=your_mcc_customer_id_here
GOOGLE_ADS_REFRESH_TOKEN=your_mcc_refresh_token_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Queue
RABBITMQ_URL=amqp://localhost

# External Services
IP_REPUTATION_API_KEY=your_ipqualityscore_or_maxmind_key 